generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Promotion {
  id          Int        @id @default(autoincrement())
  title       String
  description String
  url         String
  imageUrl    String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  affiliateId Int?
  approved    Boolean    @default(false)
  affiliate   Affiliate? @relation(fields: [affiliateId], references: [id])
  schedules   Schedule[]
  sendLogs    SendLog[]
}

model Affiliate {
  id         Int         @id @default(autoincrement())
  name       String
  baseUrl    String
  params     String?
  platform   String
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  promotions Promotion[]
  accessToken String?    // Token de acesso do AliExpress
}

model Schedule {
  id          Int       @id @default(autoincrement())
  promotionId Int
  chatId      String
  cron        String
  active      Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  promotion   Promotion @relation(fields: [promotionId], references: [id])
}

model SendLog {
  id          Int       @id @default(autoincrement())
  promotionId Int
  chatId      String
  sentAt      DateTime  @default(now())
  status      String
  createdAt   DateTime  @default(now())
  promotion   Promotion @relation(fields: [promotionId], references: [id])
}
