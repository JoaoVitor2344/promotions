# Configurações do Telegram
TELEGRAM_BOT_TOKEN=seu_token_do_bot_aqui
TELEGRAM_CHANNEL_ID=@seu_canal_ou_chat_id

# Configurações de Debug
DEBUG_MODE=true

# Configurações do Scraper - Pelando
PELANDO_BASE_URL=https://www.pelando.com.br
PELANDO_URL=https://www.pelando.com.br/ofertas
PELANDO_DEAL_CARD_SELECTOR=[data-qa="deal-card"]
PELANDO_TITLE_CONTAINER_SELECTOR=[data-qa="title-link"]
PELANDO_TITLE_SELECTOR=span
PELANDO_CONTENT_CONTAINER_SELECTOR=[data-qa="bottom-left-content"]
PELANDO_PRICE_SELECTOR=[data-qa="price"]
PELANDO_STORE_SELECTOR=[data-qa="merchant-name"]

# Configurações do Browser (Playwright)
HEADLESS_MODE=true
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080
BROWSER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage

# Configurações de Timeout e Retry
PAGE_TIMEOUT=30000
PAGE_STABILIZATION_DELAY=2000
SELECTOR_TIMEOUT=10000
SCRAPER_MAX_RETRIES=3
SCRAPER_RETRY_DELAY=5000
SCRAPER_ERROR_DELAY=10000

# Configurações de Debug
DEBUG_HTML_LENGTH=500
ERROR_SCREENSHOT_PATH=./error-screenshot.png

# Configurações de Banco de Dados
DATABASE_URL=postgresql://username:password@localhost:5432/bot_promocoes
REDIS_URL=redis://localhost:6379

# Configurações de IDs de Afiliado
AMAZON_AFFILIATE_TAG=seutagamazon-20
MERCADOLIVRE_AFFILIATE_ID=seutagml
SHOPEE_AFFILIATE_ID=seutagshopee
ALIEXPRESS_AFFILIATE_ID=seutagaliexpress

# Configurações do Scheduler
CRON_SCHEDULE=*/15 * * * *
SCRAPER_INTERVAL_MINUTES=15

# Configurações de Log
LOG_LEVEL=info
LOG_FILE_PATH=./logs/bot.log